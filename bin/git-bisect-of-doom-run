$| = 1;

use strict;
use warnings;

use FindBin;
use lib "$FindBin::RealBin/../libs";

use Amling::Git::GRD::Utils;
use Amling::Git::Utils;
use Getopt::Long;

my @options =
(
    "help" => sub { usage(0); },
);

GetOptions(@options) || usage(1);

sub usage
{
    my $ec = shift;

    print <<EOF;
Usage: $0 <options>
   --help                                             Print this help.
EOF

    exit $ec;
}
